  "tags": [
    {
      "name": "CRUD operations"
    }
  ],
  "paths": {
    "/mec{id}": {
      "get": {
        "description": "Returns an MEC resource to the requester",
        "operationId": "getResource",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "An identifier uniquely identifying the desired resource. For Example: urn_dece_cid_eidr-s_0000-1111-2222-3333-TEST-3",
            "required": true,
            "type": "string"
          }
        ],
        "produces": [
          "application/xml",
          "plain/text"
        ],
        "responses": {
          "200": {
            "description": "Success",
            "schema": {
              "type": "string"
            }
          },
          "404": {
            "description": "Resource not found",
            "schema": {
              "type": "string"
            }
          }
        }
      }
    }
  }
}
